<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="nwes.passwordmanager.MainPageController"
            prefHeight="650" prefWidth="750"
            minHeight="450" minWidth="550">
    <left>
        <VBox alignment="TOP_LEFT"
              prefWidth="165"
              spacing="10"
              fillWidth="true" VBox.vgrow="ALWAYS"
              style="-fx-background-color: lightgray; -fx-border-color: black; -fx-border-width: 2px;"
        >
            <Button text="Add" onAction="#onAddButtonClick"/>
            <Button text="Generate Password" onAction="#onGeneratePasswordClick"/>
            <Button text="Show List" onAction="#onShowListButtonClick"/>
            <Button text="Settings" onAction="#onSettingsButtonClick"/>
            <Button text="Logs" onAction="#onLogsButtonClick"/>
            <ScrollPane fx:id="logsScrollPane"
                        visible="false"
                        fitToWidth="true" fitToHeight="true"
                        hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                        VBox.vgrow="ALWAYS"
            >
                <VBox fx:id="logsVBox" fillWidth="true" VBox.vgrow="ALWAYS">
                    <TextField fx:id="logsSearchBar" promptText="search logs"/>

                    <TextArea fx:id="logsTextArea" wrapText="true" VBox.vgrow="ALWAYS" editable="false"/>
                </VBox>
            </ScrollPane>
        </VBox>
    </left>
    <center>
        <StackPane alignment="CENTER_RIGHT"
                   prefWidth="330"
                   style="-fx-background-color: lightblue; -fx-border-color: black; -fx-border-width: 2px;">
            <VBox fx:id="settingsVBox"
                  visible="false"
                  alignment="CENTER_RIGHT"
                  fillWidth="true" VBox.vgrow="ALWAYS"
                  spacing="10"
            >
                <TextField prefColumnCount="24" promptText="Settings"/>

            </VBox>
            <VBox fx:id="showListVBox"
                  visible="false"
                  alignment="CENTER"
                  fillWidth="true" VBox.vgrow="ALWAYS"
                  spacing="10"
            >
                <TextField prefColumnCount="24" promptText="ShowList"/>

            </VBox>
        </StackPane>
    </center>


</BorderPane>
